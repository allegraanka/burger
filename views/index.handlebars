<div class="burger-list">
    <h2 class="try-burger-title">burgers to try</h2>
    {{#each burgers}}
        {{#unless devoured}}
            {{> burgers/burger-button eaten=true}}
        {{/unless}}
    {{/each}}
</div>

<div class="burger-list">
    <h2 class="devoured-burger-title">burgers devoured</h2>
    {{#each burgers}}
        {{#if devoured}}
            {{> burgers/burger-button eaten=false}}
        {{/if}}
    {{/each}}
</div>

<div>
    <h2 class="add-burger-title">add a burger</h2>
    <form class="create-burger-form">
    
        <div class="form-group">
            <label for="add_burger">burger name</label>
            <input type="text" id="add_burger" name="burger_name">
        </div>
    
        <div class="form-group">
            <label for="devoured">have you already tried this burger?</label><br>
            <input type="radio" id="devoured" name="devoured" value="1" checked> yep!<br>
            <input type="radio" id="not_devoured" name="devoured" value="0"> not yet!
        </div>
    
        <button type="submit">add burger</button>
    </form>
</div>